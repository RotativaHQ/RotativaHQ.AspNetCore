<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>RotativaHQ.AspNetCore</PackageId>
    <PackageVersion>1.2.1</PackageVersion>
    <Authors>Giorgio Bozio</Authors>
    <Description>RotativaHQ client for Asp.Net Core</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Header and Footer fix</PackageReleaseNotes>
    <Copyright>Copyright 2019 (c) Viva Software di Bozio Giorgio. All rights reserved.</Copyright>
    <PackageTags>PDF AspNetCore</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NeutralLanguage />
    <Version>1.2.1</Version>
    <PackageProjectUrl>https://rotativa.io/</PackageProjectUrl>
    <PackageLicenseUrl>https://rotativa.io/Subscriptions/New</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/RotativaHQ/RotativaHQ.AspNetCore</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\RotativaHQ.AspNetCore.xml</DocumentationFile>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>RotativaHQ.DotNetStandard.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="anglesharp" Version="0.9.9" />
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.0" />
    <PackageReference Include="protobuf-net" Version="2.3.2" />
  </ItemGroup>

</Project>
